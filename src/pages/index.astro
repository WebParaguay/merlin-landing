---
import Base from "@/layouts/Base.astro";
import Banner from "@/layouts/components/Banner.astro";
import Cta from "@/layouts/partials/Cta.astro";
import Summary from "@/components/Summary.astro";
import Works from "@/components/about/Works.astro";
import Plans from "@/components/Plans.astro";
import ContactForm from "@/components/ContactForm.astro";
import { getEntryBySlug } from "astro:content";

const homepage = await getEntryBySlug("homepage", "index");
const about = await getEntryBySlug("about", "index");
const { banner } = homepage.data;
const { features } = about.data;
---

<Base>
  <!-- banner -->
  <Banner banner={banner} />
  <!-- banner -->
  <Summary />
  <!-- our works -->
  <Works features={features} />
  <!-- plans -->
  <Plans />
  <!-- call to action -->
  <Cta />
  <!-- contact -->
  <ContactForm />
</Base>
